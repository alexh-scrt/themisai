{
    "app_name": "Patexia Legal AI Chatbot",
    "app_version": "1.0.0",
    "debug": true,
    "environment": "development",
    "ollama": {
        "base_url": "http://localhost:11434",
        "embedding_model": "mxbai-embed-large",
        "fallback_model": "nomic-embed-text",
        "llm_model": "llama3.1:8b",
        "timeout": 45,
        "concurrent_requests": 3,
        "gpu_memory_limit": "8GB",
        "model_pull_timeout": 300,
        "health_check_interval": 30,
        "retry_attempts": 3,
        "retry_delay": 2,
        "embedding_batch_size": 32,
        "request_pool_size": 10
    },
    "llamaindex": {
        "chunk_size": 768,
        "chunk_overlap": 100,
        "hybrid_search_alpha": 0.6,
        "top_k_results": 15,
        "similarity_threshold": 0.7,
        "enable_metadata_enhancement": true,
        "preserve_legal_structure": true,
        "section_aware_chunking": true,
        "citation_extraction": true,
        "max_chunk_size": 2048,
        "min_chunk_size": 200,
        "paragraph_boundary_weight": 0.8,
        "sentence_boundary_weight": 0.6,
        "legal_section_boost": 0.2,
        "citation_boost": 0.15
    },
    "legal_documents": {
        "preserve_legal_structure": true,
        "section_aware_chunking": true,
        "citation_extraction": true,
        "metadata_enhancement": true,
        "supported_file_types": [
            "pdf",
            "txt"
        ],
        "max_file_size_mb": 50,
        "ocr_enabled": true,
        "ocr_confidence_threshold": 0.85,
        "extract_page_numbers": true,
        "extract_section_headers": true,
        "extract_legal_citations": true,
        "preserve_formatting": true,
        "language_detection": true,
        "supported_languages": [
            "en"
        ],
        "content_validation": true,
        "duplicate_detection": true,
        "quality_scoring": true,
        "min_quality_score": 0.7
    },
    "ui": {
        "progress_update_interval": 500,
        "websocket_heartbeat": 30,
        "auto_refresh_interval": 5000,
        "search_debounce_ms": 300,
        "pagination_size": 15,
        "max_search_history": 100,
        "enable_real_time_updates": true,
        "enable_search_suggestions": true,
        "enable_auto_complete": true,
        "highlight_style": "html_mark",
        "citation_context_chars": 200,
        "max_content_preview": 500,
        "enable_keyboard_shortcuts": true,
        "theme": "light",
        "color_scheme": "professional",
        "enable_visual_markers": true,
        "case_color_palette": [
            "#FF6B6B",
            "#4ECDC4",
            "#45B7D1",
            "#96CEB4",
            "#FFEAA7",
            "#DDA0DD",
            "#98D8C8",
            "#F7DC6F",
            "#BB8FCE",
            "#85C1E9"
        ]
    },
    "capacity_limits": {
        "documents_per_case": 25,
        "max_chunk_size": 2048,
        "max_search_results": 100,
        "max_concurrent_uploads": 5,
        "max_file_size_mb": 50,
        "max_total_storage_gb": 100,
        "max_concurrent_users": 50,
        "max_cases_per_user": 20,
        "max_search_queries_per_minute": 60,
        "max_websocket_connections": 100,
        "chunk_processing_batch_size": 50,
        "embedding_generation_batch_size": 32,
        "search_cache_size": 1000,
        "document_cache_size": 500,
        "enable_capacity_warnings": true,
        "warning_threshold_percentage": 85,
        "enable_auto_cleanup": true,
        "cleanup_interval_hours": 24
    },
    "database": {
        "mongodb_uri": "mongodb://localhost:27017",
        "mongodb_database": "patexia_legal_ai",
        "mongodb_collection_prefix": "legal_",
        "mongodb_connection_timeout": 30,
        "mongodb_server_selection_timeout": 30,
        "mongodb_max_pool_size": 100,
        "mongodb_min_pool_size": 10,
        "mongodb_max_idle_time": 300,
        "mongodb_heartbeat_frequency": 10,
        "mongodb_socket_timeout": 60,
        "weaviate_url": "http://localhost:8080",
        "weaviate_api_key": null,
        "weaviate_timeout": 60,
        "weaviate_connection_timeout": 30,
        "weaviate_read_timeout": 120,
        "weaviate_batch_size": 100,
        "weaviate_dynamic_batching": true,
        "weaviate_consistency_level": "ONE",
        "weaviate_replication_factor": 1,
        "weaviate_enable_backup": true,
        "weaviate_backup_interval_hours": 6,
        "neo4j_uri": "bolt://localhost:7687",
        "neo4j_user": "neo4j",
        "neo4j_password": null,
        "neo4j_database": "legal_relationships",
        "neo4j_connection_timeout": 30,
        "neo4j_max_transaction_retry_time": 30,
        "neo4j_max_connection_lifetime": 3600,
        "neo4j_max_connection_pool_size": 100,
        "neo4j_connection_acquisition_timeout": 60,
        "neo4j_trust": "TRUST_SYSTEM_CA_SIGNED_CERTIFICATES",
        "neo4j_encrypted": false,
        "neo4j_enable_telemetry": false
    },
    "logging": {
        "level": "DEBUG",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(correlation_id)s - %(message)s",
        "enable_correlation_ids": true,
        "correlation_id_header": "X-Correlation-ID",
        "log_sql_queries": false,
        "log_file_path": "logs/patexia_legal_ai.log",
        "log_rotation": true,
        "log_max_size_mb": 100,
        "log_backup_count": 5,
        "enable_console_logging": true,
        "enable_file_logging": true,
        "enable_json_logging": false,
        "log_performance_metrics": true,
        "log_websocket_events": true,
        "log_configuration_changes": true,
        "log_search_queries": true,
        "log_document_processing": true,
        "log_error_stack_traces": true,
        "sensitive_fields": [
            "password",
            "api_key",
            "secret",
            "token",
            "auth"
        ]
    },
    "search": {
        "default_search_type": "hybrid",
        "enable_fuzzy_search": true,
        "fuzzy_distance": 2,
        "enable_stemming": true,
        "enable_stopword_removal": true,
        "boost_exact_matches": 2.0,
        "boost_phrase_matches": 1.5,
        "boost_recent_documents": 0.1,
        "enable_query_expansion": true,
        "max_query_expansion_terms": 5,
        "enable_spell_correction": true,
        "enable_search_analytics": true,
        "search_result_highlighting": true,
        "highlight_fragment_size": 150,
        "max_highlight_fragments": 3,
        "enable_faceted_search": true,
        "facet_min_count": 1,
        "enable_search_suggestions": true,
        "suggestion_min_prefix_length": 3,
        "max_suggestions": 10
    },
    "processing": {
        "max_concurrent_documents": 5,
        "document_processing_timeout": 300,
        "chunk_processing_batch_size": 50,
        "embedding_generation_timeout": 60,
        "enable_parallel_processing": true,
        "max_worker_threads": 8,
        "processing_queue_size": 100,
        "enable_processing_retry": true,
        "max_retry_attempts": 3,
        "retry_delay_seconds": 5,
        "enable_progress_tracking": true,
        "progress_update_frequency": 1,
        "enable_quality_checks": true,
        "min_content_length": 50,
        "max_empty_chunks_ratio": 0.1,
        "enable_duplicate_detection": true,
        "duplicate_similarity_threshold": 0.95
    },
    "websocket": {
        "host": "localhost",
        "port": 8000,
        "path": "/ws",
        "heartbeat_interval": 30,
        "connection_timeout": 60,
        "max_connections": 100,
        "max_message_size": 1048576,
        "enable_compression": true,
        "ping_interval": 20,
        "ping_timeout": 10,
        "close_timeout": 10,
        "auto_ping": true,
        "enable_per_message_deflate": true,
        "compression_level": 6,
        "memory_limit": 16777216,
        "enable_connection_pooling": true,
        "pool_size": 50,
        "enable_message_queuing": true,
        "queue_max_size": 1000
    },
    "security": {
        "enable_cors": true,
        "cors_origins": [
            "http://localhost:3000",
            "http://localhost:8080"
        ],
        "cors_methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS"
        ],
        "cors_headers": [
            "*"
        ],
        "cors_credentials": true,
        "enable_rate_limiting": true,
        "rate_limit_requests_per_minute": 100,
        "rate_limit_burst": 20,
        "enable_input_validation": true,
        "max_request_size_mb": 100,
        "enable_request_logging": true,
        "enable_response_headers": true,
        "security_headers": {
            "X-Content-Type-Options": "nosniff",
            "X-Frame-Options": "DENY",
            "X-XSS-Protection": "1; mode=block",
            "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
            "Content-Security-Policy": "default-src 'self'"
        },
        "enable_api_key_validation": false,
        "api_key_header": "X-API-Key",
        "enable_user_authentication": false,
        "session_timeout_minutes": 480
    },
    "monitoring": {
        "enable_health_checks": true,
        "health_check_interval": 30,
        "enable_performance_monitoring": true,
        "performance_sample_rate": 0.1,
        "enable_resource_monitoring": true,
        "resource_check_interval": 10,
        "cpu_threshold_percentage": 80,
        "memory_threshold_percentage": 85,
        "disk_threshold_percentage": 90,
        "gpu_memory_threshold_percentage": 90,
        "enable_alerts": true,
        "alert_webhook_url": null,
        "enable_metrics_collection": true,
        "metrics_retention_days": 30,
        "enable_trace_logging": false,
        "trace_sample_rate": 0.01,
        "enable_error_tracking": true,
        "error_sampling_rate": 1.0
    },
    "caching": {
        "enable_embedding_cache": true,
        "embedding_cache_size": 10000,
        "embedding_cache_ttl_hours": 24,
        "enable_search_cache": true,
        "search_cache_size": 1000,
        "search_cache_ttl_minutes": 30,
        "enable_document_cache": true,
        "document_cache_size": 500,
        "document_cache_ttl_hours": 6,
        "enable_configuration_cache": true,
        "configuration_cache_ttl_minutes": 5,
        "cache_compression": true,
        "cache_encryption": false,
        "enable_cache_metrics": true,
        "cache_cleanup_interval_minutes": 60
    },
    "backup": {
        "enable_auto_backup": true,
        "backup_interval_hours": 6,
        "backup_retention_days": 30,
        "backup_location": "backups/",
        "backup_compression": true,
        "backup_encryption": false,
        "enable_incremental_backup": true,
        "backup_verification": true,
        "backup_notification": false,
        "backup_cleanup_enabled": true,
        "max_backup_files": 100,
        "backup_file_pattern": "backup_{timestamp}.tar.gz"
    },
    "development": {
        "enable_hot_reload": true,
        "enable_debug_mode": true,
        "enable_profiling": false,
        "profiling_sample_rate": 0.01,
        "enable_test_mode": false,
        "mock_external_services": false,
        "enable_api_documentation": true,
        "api_docs_path": "/docs",
        "enable_interactive_docs": true,
        "enable_schema_validation": true,
        "enable_request_validation": true,
        "enable_response_validation": false,
        "development_database": "patexia_legal_ai_dev",
        "reset_database_on_startup": false,
        "seed_test_data": false
    }
}