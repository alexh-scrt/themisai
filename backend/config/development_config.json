{
    "environment": "development",
    "debug": true,
    "ollama": {
        "timeout": 120,
        "concurrent_requests": 2,
        "gpu_memory_limit": "6GB",
        "model_pull_timeout": 600,
        "health_check_interval": 60,
        "retry_attempts": 5,
        "retry_delay": 3,
        "embedding_batch_size": 16,
        "request_pool_size": 5
    },
    "llamaindex": {
        "chunk_size": 512,
        "chunk_overlap": 50,
        "top_k_results": 10,
        "similarity_threshold": 0.6,
        "max_chunk_size": 1024,
        "min_chunk_size": 100
    },
    "legal_documents": {
        "max_file_size_mb": 25,
        "ocr_confidence_threshold": 0.75,
        "min_quality_score": 0.6
    },
    "ui": {
        "progress_update_interval": 250,
        "websocket_heartbeat": 15,
        "auto_refresh_interval": 2000,
        "search_debounce_ms": 150,
        "pagination_size": 10,
        "max_search_history": 50
    },
    "capacity_limits": {
        "documents_per_case": 10,
        "max_chunk_size": 1024,
        "max_search_results": 50,
        "max_concurrent_uploads": 3,
        "max_file_size_mb": 25,
        "max_total_storage_gb": 10,
        "max_concurrent_users": 10,
        "max_cases_per_user": 5,
        "max_search_queries_per_minute": 120,
        "max_websocket_connections": 20,
        "chunk_processing_batch_size": 25,
        "embedding_generation_batch_size": 16,
        "search_cache_size": 100,
        "document_cache_size": 50,
        "warning_threshold_percentage": 75,
        "cleanup_interval_hours": 6
    },
    "database": {
        "mongodb_database": "patexia_legal_ai_dev",
        "mongodb_max_pool_size": 20,
        "mongodb_min_pool_size": 2,
        "mongodb_max_idle_time": 120,
        "mongodb_socket_timeout": 30,
        "weaviate_batch_size": 50,
        "weaviate_replication_factor": 1,
        "weaviate_backup_interval_hours": 12,
        "neo4j_database": "legal_relationships_dev",
        "neo4j_max_connection_pool_size": 20,
        "neo4j_connection_acquisition_timeout": 30
    },
    "logging": {
        "level": "DEBUG",
        "log_sql_queries": true,
        "log_file_path": "logs/dev/patexia_legal_ai_dev.log",
        "log_max_size_mb": 50,
        "log_backup_count": 3,
        "enable_json_logging": false,
        "log_performance_metrics": true,
        "log_websocket_events": true,
        "log_configuration_changes": true,
        "log_search_queries": true,
        "log_document_processing": true,
        "log_error_stack_traces": true
    },
    "search": {
        "fuzzy_distance": 1,
        "boost_exact_matches": 1.5,
        "boost_phrase_matches": 1.2,
        "boost_recent_documents": 0.05,
        "max_query_expansion_terms": 3,
        "highlight_fragment_size": 100,
        "max_highlight_fragments": 2,
        "suggestion_min_prefix_length": 2,
        "max_suggestions": 5
    },
    "processing": {
        "max_concurrent_documents": 3,
        "document_processing_timeout": 180,
        "chunk_processing_batch_size": 25,
        "embedding_generation_timeout": 30,
        "max_worker_threads": 4,
        "processing_queue_size": 50,
        "max_retry_attempts": 2,
        "retry_delay_seconds": 3,
        "progress_update_frequency": 0.5,
        "min_content_length": 25,
        "max_empty_chunks_ratio": 0.15
    },
    "websocket": {
        "heartbeat_interval": 15,
        "connection_timeout": 30,
        "max_connections": 20,
        "max_message_size": 524288,
        "ping_interval": 10,
        "ping_timeout": 5,
        "close_timeout": 5,
        "compression_level": 3,
        "memory_limit": 8388608,
        "pool_size": 10,
        "queue_max_size": 100
    },
    "security": {
        "cors_origins": [
            "http://localhost:3000",
            "http://localhost:8080",
            "http://127.0.0.1:3000",
            "http://127.0.0.1:8080",
            "http://localhost:7860",
            "http://127.0.0.1:7860"
        ],
        "rate_limit_requests_per_minute": 200,
        "rate_limit_burst": 50,
        "max_request_size_mb": 50,
        "enable_request_logging": true,
        "security_headers": {
            "X-Content-Type-Options": "nosniff",
            "X-Frame-Options": "SAMEORIGIN",
            "X-XSS-Protection": "1; mode=block"
        },
        "session_timeout_minutes": 60
    },
    "monitoring": {
        "health_check_interval": 15,
        "performance_sample_rate": 1.0,
        "resource_check_interval": 5,
        "cpu_threshold_percentage": 70,
        "memory_threshold_percentage": 75,
        "disk_threshold_percentage": 80,
        "gpu_memory_threshold_percentage": 80,
        "metrics_retention_days": 7,
        "enable_trace_logging": true,
        "trace_sample_rate": 0.1,
        "error_sampling_rate": 1.0
    },
    "caching": {
        "embedding_cache_size": 1000,
        "embedding_cache_ttl_hours": 6,
        "search_cache_size": 100,
        "search_cache_ttl_minutes": 10,
        "document_cache_size": 50,
        "document_cache_ttl_hours": 2,
        "configuration_cache_ttl_minutes": 1,
        "cache_compression": false,
        "cache_cleanup_interval_minutes": 30
    },
    "backup": {
        "backup_interval_hours": 12,
        "backup_retention_days": 7,
        "backup_location": "backups/dev/",
        "backup_compression": false,
        "backup_verification": false,
        "max_backup_files": 20
    },
    "development": {
        "enable_hot_reload": true,
        "enable_debug_mode": true,
        "enable_profiling": true,
        "profiling_sample_rate": 0.1,
        "enable_test_mode": false,
        "mock_external_services": false,
        "enable_api_documentation": true,
        "api_docs_path": "/docs",
        "enable_interactive_docs": true,
        "enable_schema_validation": true,
        "enable_request_validation": true,
        "enable_response_validation": true,
        "development_database": "patexia_legal_ai_dev",
        "reset_database_on_startup": false,
        "seed_test_data": true,
        "enable_dev_endpoints": true,
        "enable_cors_debug": true,
        "enable_slow_query_logging": true,
        "slow_query_threshold_ms": 1000,
        "enable_memory_profiling": true,
        "memory_profile_interval": 60,
        "enable_request_tracing": true,
        "trace_all_requests": false,
        "trace_slow_requests_only": true,
        "slow_request_threshold_ms": 2000
    },
    "testing": {
        "enable_test_fixtures": true,
        "test_data_path": "tests/fixtures/",
        "mock_ollama_responses": false,
        "mock_embedding_generation": false,
        "test_embedding_dimensions": 1024,
        "enable_test_database": true,
        "test_database_name": "patexia_legal_ai_test",
        "reset_test_database": true,
        "test_file_upload_limit_mb": 10,
        "test_case_limit": 3,
        "test_document_limit": 5,
        "enable_integration_tests": true,
        "integration_test_timeout": 30,
        "enable_performance_tests": false,
        "performance_test_iterations": 10
    },
    "gradio_ui": {
        "host": "127.0.0.1",
        "port": 7860,
        "server_name": "127.0.0.1",
        "server_port": 7860,
        "share": false,
        "debug": true,
        "enable_queue": true,
        "max_threads": 4,
        "show_error": true,
        "show_tips": true,
        "height": 600,
        "width": "100%",
        "favicon_path": null,
        "ssl_keyfile": null,
        "ssl_certfile": null,
        "ssl_keyfile_password": null,
        "auth": null,
        "auth_message": "Please login to access the Legal AI Chatbot",
        "max_file_size": "25mb",
        "upload_max_files": 10,
        "temp_file_timeout": 3600,
        "enable_analytics": false,
        "analytics_provider": null
    },
    "docker_development": {
        "auto_reload_code": true,
        "mount_source_code": true,
        "enable_debugger": true,
        "debugger_port": 5678,
        "expose_all_ports": true,
        "enable_hot_reload_containers": false,
        "container_restart_policy": "unless-stopped",
        "enable_development_volumes": true,
        "development_network": "patexia_dev_network",
        "enable_container_logging": true,
        "log_driver": "json-file",
        "log_max_size": "10m",
        "log_max_file": 3
    },
    "local_development": {
        "enable_file_watcher": true,
        "watch_patterns": [
            "*.py",
            "*.json",
            "*.yaml",
            "*.yml"
        ],
        "ignore_patterns": [
            "__pycache__",
            "*.pyc",
            ".git",
            "logs",
            "backups"
        ],
        "auto_restart_on_change": true,
        "restart_delay_seconds": 2,
        "enable_code_formatting": true,
        "enable_linting": true,
        "enable_type_checking": true,
        "enable_import_sorting": true,
        "code_quality_on_save": true,
        "pre_commit_hooks": true,
        "enable_jupyter_integration": false,
        "jupyter_port": 8888
    }
}